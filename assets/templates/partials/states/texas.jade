.form-group
  label.col-lg-4.control-label( for='inputLastName' ) Last Name
  .col-lg-8
    input#inputLastName.form-control( type='text', ng-model="user.last_name", placeholder="Last Name" )

.enclose-group
  .form-group
    label.col-lg-4.control-label( for='inputCID' ) Texas Customer #
    .col-lg-8
      input#inputCID.form-control( type='text', ng-model="state.cid" )
    .col-lg-8.col-lg-push-4 This # is on your hunting license

  .form-group
    label.center - OR -

  .form-group
    label.col-lg-4.control-label( for='inputSSN' ) Social Security #
    .col-lg-8
      input#inputSSN.form-control( type='text', ng-model="user.ssn", placeholder="XXXXXXXXX" )

  .form-group
    label.center - OR -

  .form-group
    label.col-lg-4.control-label( for='inputDLN' ) Drivers License #
    .col-lg-8
      input#inputDLN.form-control( type='text', ng-model="user.drivers_license" )
  .form-group
    label.col-lg-4.control-label( for='inputDLN' ) Drivers License State
    .col-lg-8
      select#select.form-control( ng-model="user.dl_state", ng-options="stateOption for stateOption in stateOptions" )
        option( value="" ) State
