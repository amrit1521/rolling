#AdminReportsPurchases.container( ng-controller="AdminReportsCharts" )
  .page-header
    h3 Reports: New Sales
  .row
    .col-md-12
      img( src="img/spinner.gif", ng-show="loading" )
      form.form-horizontal
        .pull-right
          .form-group(ng-hide="loading", style="margin-top: 10px; margin-right: 30px;")
            label.control-label(style="margin-left: 5px;")
              input(type="radio", ng-model="dateFilterType", value="this_week", ng-change="setDateRange(dateFilterType)", style="margin-right:5px;")
              | This Week
            label.control-label(style="margin-left: 5px;")
              input(type="radio", ng-model="dateFilterType", value="this_month", ng-change="setDateRange(dateFilterType)", style="margin-right:5px;")
              | This Month
            label.control-label(style="margin-left: 5px;")
              input(type="radio", ng-model="dateFilterType", value="this_year", ng-change="setDateRange(dateFilterType)", style="margin-right:5px;")
              | This Year
            label.control-label(style="margin-left: 5px;")
              input(type="radio", ng-model="dateFilterType", value="last_week", ng-change="setDateRange(dateFilterType)", style="margin-right:5px;")
              | Last Week
            label.control-label(style="margin-left: 5px;")
              input(type="radio", ng-model="dateFilterType", value="last_month", ng-change="setDateRange(dateFilterType)", style="margin-right:5px;")
              | Last Month
            label.control-label(style="margin-left: 5px;")
              input(type="radio", ng-model="dateFilterType", value="last_year", ng-change="setDateRange(dateFilterType)", style="margin-right:5px;")
              | Last Year

        .pull-left(ng-hide="loading")
          .form-group
            label.col-lg-4.control-label Report
            .col-lg-8
              select.form-control( ng-model="reportType", ng-options="reportType.value as reportType.name for reportType in reportTypes" )
          .form-group
            label.col-lg-4.control-label Start Date
            .col-lg-8
              input.kendo-date-time-picker.form-control(id="startDate" type='date', ng-model="startDate" )
          .form-group
            label.col-lg-4.control-label End Date
            .col-lg-8
              input.kendo-date-time-picker.form-control(id="endDate" type='date', ng-model="endDate" )
          .form-group
            label.col-lg-4.control-label By
            .col-lg-8
              select.form-control( ng-model="x_axis", ng-options="x_axis.value as x_axis.name for x_axis in x_axises" )
          .form-group
            label.col-lg-4.control-label Chart Type
            .col-lg-8
              select.form-control( ng-model="chartType", ng-options="chartType.value as chartType.name for chartType in chartTypes" )
          .form-group()
            button.btn.btn-primary.pull-left(style="margin-left: 10px;", ng-click="submit($event)") Submit

  div#salesChart



