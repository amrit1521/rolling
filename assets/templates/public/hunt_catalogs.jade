#HuntCatalogs.container( ng-controller="HuntCatalogs" )
  .form-group.pull-right
  .page-header
    h3 Hunt Catalog
  .row
    .col-md-12
      img( src="img/spinner.gif", ng-show="loadingHuntCatalogs" )
      form.form-inline
        .form-group(ng-hide="loadingHuntCatalogs", style="margin-top: 10px;")
          .col-md-push-1
            select#savedViews.form-control.col-md-12(ng-show="customViews && customViews.length > 0", ng-model="customView", ng-change="loadGridView(customView)", ng-options="view as view.name for view in customViews" )
              option( value="" ) Select a Category

      div#huntCatalogsGrid



