.container( ng-controller="Register" )
  .page-header
  .row
    .col-lg-6.col-md-6
      .well
        form.form-horizontal( ng-submit="submit(user, state)" )
          fieldset
            legend Register New User
            fieldset
              label Entering this data will show you your points in many states:
              .form-group
                label.col-lg-4.control-label( for='inputPostal' ) Zip Code
                .col-lg-8
                  input#inputPostal.form-control( type='text', placeholder="Zip Code", ng-model="user.mail_postal" )
              .form-group( ng-show="showStates" )
                label.col-lg-4.control-label( for='states' ) I have points in
                .col-lg-8
                  select#states.form-control.btn-info( ng-model="stateTemplate", ng-options="state for state in pointStates" )
              .form-group
                label.col-lg-4.control-label( for='inputBirthDate' ) Birth Date
                .col-lg-8
                  input#inputBirthDate.form-control(type='date', placeholder="MM/DD/YYYY", ng-model="user.dob" )

              .state-info( ng-include="getStatePage(stateTemplate)" )

            br
            fieldset
              label Enter your new user login credentials:
              .form-group
                label.col-lg-4.control-label( for='inputEmail' ) Email
                .col-lg-8
                  input#inputEmail.form-control( type='email', required='required', placeholder='Email', ng-model="user.email" )
              .form-group
                label.col-lg-4.control-label( for='inputPassword' ) Password
                .col-lg-8
                  input#inputPassword.form-control( type='password', required='required', placeholder='New User Password', ng-model="user.password")

            br
            .input-group
              label( for='inputCheckbox' )
                input(type='checkbox', ng-click="toggleNoPointsUser()")
                |  Sign-up without points
            div(ng-show="createUserWithNoPoints")
              fieldset
                label To sign-up without finding your points please fill in this additional information:
              .form-group
                label.col-lg-4.control-label( for='inputFirstName' ) Name
                .col-lg-8
                  input#inputFirstName.form-control( type='text', placeholder="First Name", ng-model="user.first_name" )
                  input.form-control( type='text', placeholder="Last Name", ng-model="user.last_name" )
            .form-group
              label.col-lg-4.control-label( for='termsandconditions') Terms and Conditions
