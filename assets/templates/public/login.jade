.container( ng-controller="Login" )
  .page-header
  .row
    .col-lg-6.col-md-6
      .well
        form.form-horizontal( ng-submit="submit()" )
          fieldset
            legend Sign In
            .form-group
              label.col-lg-4.control-label( for='inputEmail' ) Email or Username
              .col-lg-8
                input#inputEmail.form-control( type='text', placeholder='Email or Username', ng-model="email" )
            .form-group
              label.col-lg-4.control-label( for='inputPassword' ) Password
              .col-lg-8
                input#inputPassword.form-control( type='password', placeholder='Password', ng-model="password" )

            button.btn.btn-primary.col-lg-offset-4.col-lg-8.col-md-12.col-sm-12.col-xs-12 Sign In
